# 项目基本信息
PROJECT_NAME=Quant Trade
VERSION=1.0.0

# 交易配置
TRADING_ENABLED=false        # 是否启用真实交易
SIMULATION_MODE=true         # 是否为模拟模式

# 数据源配置
DATA_PROVIDER=akshare        # 数据提供者: akshare, yfinance

# 股票API配置
STOCK_API_HOST=quant-gateway # Docker网络中使用容器名称，本地开发使用localhost
STOCK_API_PORT=8080          # Gateway API端口
STOCK_BATCH_SIZE=1000        # 批量插入每批数量

# 股票更新批次控制配置
STOCK_UPDATE_BATCH_SIZE=100       # 每批更新数量
STOCK_UPDATE_BATCH_PAUSE=300      # 每批之间暂停秒数（5分钟=300秒）
STOCK_UPDATE_ITEM_DELAY=0.2       # 每只股票之间的延迟秒数

# 股票数据获取调度配置（每天凌晨0:00执行）
STOCK_FETCH_SCHEDULE_HOUR=0
STOCK_FETCH_SCHEDULE_MINUTE=0
STOCK_FETCH_SCHEDULE_DAY_OF_WEEK=*

# 公司信息获取调度配置（每周末凌晨1:00执行）
COMPANY_FETCH_SCHEDULE_HOUR=1
COMPANY_FETCH_SCHEDULE_MINUTE=0
COMPANY_FETCH_SCHEDULE_DAY_OF_WEEK=sat,sun

# 交易日历获取调度配置（每天凌晨2:00执行）
TRADING_CALENDAR_SCHEDULE_HOUR=2
TRADING_CALENDAR_SCHEDULE_MINUTE=0
TRADING_CALENDAR_SCHEDULE_DAY_OF_WEEK=*

# 股票日线数据获取调度配置（每天下午4:00执行）
STOCK_DAILY_SCHEDULE_HOUR=16
STOCK_DAILY_SCHEDULE_MINUTE=0
STOCK_DAILY_SCHEDULE_DAY_OF_WEEK=*

# 日线数据同步多线程配置
# 建议根据服务器配置调整:
# - 小型服务器 (2核4G): 5-10 线程
# - 中型服务器 (4核8G): 10-20 线程
# - 大型服务器 (8核16G): 20-50 线程
STOCK_DAILY_MAX_WORKERS=10

# 日志配置
LOG_LEVEL=INFO               # 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL

# 调度配置（单位：秒）
MARKET_MONITOR_INTERVAL=60          # 市场监控任务执行间隔
STRATEGY_EXECUTION_INTERVAL=300     # 策略执行任务执行间隔
HEALTH_CHECK_INTERVAL=30            # 健康检查任务执行间隔

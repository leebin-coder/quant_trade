# 项目基本信息
PROJECT_NAME=Quant Trade
VERSION=1.0.0

# 交易配置
TRADING_ENABLED=false        # 是否启用真实交易
SIMULATION_MODE=true         # 是否为模拟模式

# 数据源配置
DATA_PROVIDER=akshare        # 数据提供者: akshare, yfinance

# 股票API配置
STOCK_API_HOST=quant-gateway # Docker网络中使用容器名称，本地开发使用localhost
STOCK_API_PORT=8080          # Gateway API端口

# 日志配置
LOG_LEVEL=INFO               # 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL

# 调度配置（单位：秒）
MARKET_MONITOR_INTERVAL=60          # 市场监控任务执行间隔
STRATEGY_EXECUTION_INTERVAL=300     # 策略执行任务执行间隔
HEALTH_CHECK_INTERVAL=30            # 健康检查任务执行间隔
